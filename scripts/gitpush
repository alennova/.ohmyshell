#!/bin/bash

# Default commit message
COMMIT_MSG="Auto commit - $(date +'%Y-%m-%d %H:%M:%S')"

# Check if a commit message is provided
if [ -n "$1" ]; then
    COMMIT_MSG="$1"
fi

# Perform git operations
git add .
git commit -m "$COMMIT_MSG"
git push

echo "âœ… Git add, commit, and push completed!"
